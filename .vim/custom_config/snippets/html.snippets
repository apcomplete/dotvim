##Custom html snippets for Ultisnips
#Extend html snippets
extends html

snippet control "form control"
<div class="control-group">
    <label for="${1:input}"
      class="${2:text}"
    <div class="controls">
      ${3}
    </div>
</div>
endsnippet

snippet input "Bootstrap form input"
<div class="control-group">
    <label for="${1:input}"
      class="${2:text}"
      >${3}</label>
    <div class="controls">
      <input id="$1" name="${4}"
        type="$2"
        value="${5}"
        />
    </div>
</div>
endsnippet

snippet label "form label"
<label for="${1:input}" class="${2:string}">${0}</label>
     <input type="$2" name="${3}" value="${4}" id="$1" class="$2" />
     <br />
endsnippet

snippet hotspot "cfc hotspot"
                <div data-xpos="${1:x}" data-ypos="${2:y}" id="${3:id}" class="hotspot">
                    <a href=""><span>+</span></a>
                    <div class="info-box" style="display:none">
                        <h1>${4:text}</h1>
                        <p>${5:description}</p>
                    </div>
                </div>
endsnippet

snippet foreach "foreach"
<?php foreach ($${1:variable} as $${2:key}): ?> 
    ${3}
<?php endforeach ?>
endsnippet

snippet foreachk "foreachk"
<?php foreach ($${1:variable} as $${2:key} => $${3:val}): ?>
    ${4}
<?php endforeach ?>
endsnippet

snippet if "if"
<?php if (${1:/*condition*/}): ?>
    ${2}
<?php endif ?>
endsnippet

snippet echo "echo" !w
<?php echo ${1:variable} ?>
endsnippet
